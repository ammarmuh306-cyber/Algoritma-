    "kelas": "Sisfo B",
    "angkatan": 2025,
    "alamat": "mamuju, Sulawesi Barat",

    "nilai": {
        "algoritma_pemrograman": 99,
        "struktur_data": 92,
        "basis_data": 30,
        "pemrograman_python": 80
    },

    "mata_kuliah_diambil": [
        "Algoritma Pemrograman",
        "Basis Data",
        "Pemrograman Python",
        "Kalkulus Informatika"
    ]
}

# Menampilkan data
print("\nData Mahasiswa:", mahasiswa)

# Mengakses data
print("Nama:", mahasiswa["nama"])
print("Kelas:", mahasiswa["kelas"])
print("Nilai Python:", mahasiswa["nilai"]["pemrograman_python"])

# Update nilai
mahasiswa["nilai"]["pemrograman_python"] = 80
